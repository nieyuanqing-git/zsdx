@model com.Bynonco.LIMS.Model.View.ViewMaterialBrokenItem
@using com.Bynonco.JqueryEasyUI.Core; 

@if (Model != null)
{
    var infoId = Model.MaterialInfoId;
    <tr id='tr_@(infoId)'>
        <td>
            @Html.Hidden("Id_" + infoId, Model == null ? "" : Model.Id.ToString())
            @Html.JLinkButton("btnRemoveMaterialBrokenItem_" + infoId, "").SetIconCls("icon-delete").SetPlain(true).SetOnclick("doRemoveMaterialBrokenItem('" + infoId + "');return false;").ToMvcString()
        </td>
        <td>@(Model.Name)</td>
        <td>@(Model.StockValueStr)</td>
        <td>@(Model.WarningValueStr)</td>
        <td>
            @Html.JValidateBox("BrokenValue_" + infoId).SetValue(Model == null ? "" : Model.BrokenValue.ToString()).SetOnChange("doChangeMaterialBrokenItemAmount('" + infoId + "');return false;").SetWidth(50).ToMvcString()
            @(Model.UnitValue)
        </td>
    </tr>
}