@using com.Bynonco.JqueryEasyUI.Core;
<script type="text/javascript">
    function generateEquipmentUndergraduateOpenQueryExpress() {
        var queryExpression = "";
        var equipmentName = $("#SearchEquipmentName").val().trim();
        if (equipmentName != "") {
            queryExpression = "EquipmentName∽\"" + equipmentName.trim() + "\"";
        }
        var equipmentModel = $("#SearchEquipmentModel").val().trim();
        if (equipmentModel != "") {
            queryExpression += (queryExpression == "" ? "" : "*") + "(EquipmentModel∽\"" + equipmentModel.trim() + "\"";
        }
        var equipmentOrgName = $("#SearchEquipmentOrgName").val().trim();
        if (equipmentOrgName != "") {
            queryExpression += (queryExpression == "" ? "" : "*") + "EquipmentOrgName∽\"" + equipmentOrgName.trim() + "\"";
        }
        var equipmentRoomName = $("#SearchEquipmentRoomName").val().trim();
        if (equipmentRoomName != "") {
            queryExpression += (queryExpression == "" ? "" : "*") + "EquipmentRoomName∽\"" + equipmentRoomName.trim() + "\"";
        }
        var scopeOfApplication = $("#SearchScopeOfApplication").val().trim();
        if (scopeOfApplication != "") {
            queryExpression += (queryExpression == "" ? "" : "*") + "ScopeOfApplication∽\"" + scopeOfApplication.trim() + "\"";
        }
        var status = $("#SearchStatus").combobox("getValue");
        if (status != "") {
            queryExpression += (queryExpression == "" ? "" : "*") + "Status=\"" + status + "\"";
        }
        return queryExpression;
    }
    function doResetEquipmentUndergraduateOpen() {
        $("#SearchEquipmentName").val("");
        $("#SearchEquipmentModel").val("");
        $("#SearchEquipmentOrgName").val("");
        $("#SearchEquipmentRoomName").val("");
        $("#SearchScopeOfApplication").val("");
        $("#SearchStatus").combobox("setValue", "");
        return false;
    }
</script>
<ul class="search">
    <li>
        <label>名称</label>
        @Html.JValidateBox("SearchEquipmentName").SetWidth(150).SetHeight(18).ToMvcString()
    </li>
    <li>
        <label>型号</label>
        @Html.JValidateBox("SearchEquipmentModel").SetWidth(150).SetHeight(18).ToMvcString()
    </li>
    <li>
        <label>所属机构</label>
        @Html.JValidateBox("SearchEquipmentOrgName").SetWidth(150).SetHeight(18).ToMvcString()
    </li>
    <li>
        <label>放置地点</label>
        @Html.JValidateBox("SearchEquipmentRoomName").SetWidth(150).SetHeight(18).ToMvcString()
    </li>
    <li>
        <label>设备功能</label>
        @Html.JValidateBox("SearchScopeOfApplication").SetWidth(150).SetHeight(18).ToMvcString()
    </li>
    <li>
        <label>审核状态</label>
        @(Html.JComboBox("SearchStatus")
                .SetEditable(false)
                .SetMutiSelect(false)
                .SetData(ViewData["EquipmentUndergraduateOpenStatusJson"])
                .SetWidth(155)
                .ToMvcString())
    </li>
    <li class="button">
        @Html.JLinkButton("btnEquipmentUndergraduateOpenSearch", "查询").SetOnclick("doSearchEquipmentUndergraduateOpen();doCloseSearch();").ToMvcString()
        @Html.JLinkButton("btnEquipmentUndergraduateOpenReset", "清空").SetOnclick("doResetEquipmentUndergraduateOpen();").ToMvcString()
        @Html.JLinkButton("btnEquipmentUndergraduateOpenClose", "关闭").SetOnclick("doCloseSearch();").ToMvcString()
        <div class="clear-both"></div>
    </li>
    <div class="clear-both"></div>
</ul>
<div class="clear-both"></div>