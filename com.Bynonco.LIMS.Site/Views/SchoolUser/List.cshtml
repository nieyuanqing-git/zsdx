@using com.Bynonco.JqueryEasyUI.Core;
@{
    var dataGrid = Html.JDataGrid("tbSchoolUserList")
       .SetUrl(Url.Action("GetGridViewSchoolUserList", "SchoolUser"))
       .SetHeight(650)
       .SetSortName("Name")
       .SetPageSize(20)
       .SetMutiSelect(true)
       .SetSingleSelect(false)
       .SetShowPrintButton(false)
       .SetShowSearchButton(true)
       .SetSearchScript("doShowSearch();");
    dataGrid.SetShowAddButton(false);
    dataGrid.SetShowEditButton(false);
    dataGrid.SetShowDeleteButton(false);
    dataGrid.AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("编码", "Id").SetSortable(false).SetHidden(true));
    dataGrid.AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("流水号", "SchoolUserId").SetSortable(false).SetHidden(true));
    dataGrid.AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("状态", "IsHandledStr").SetWidth(80).SetAlign(Align.center));
    dataGrid.AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("姓名", "Name").SetWidth(80).SetAlign(Align.center));
    dataGrid.AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("登陆名", "LoginName").SetWidth(120).SetAlign(Align.center));
    dataGrid.AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("证件类型", "CertificateType").SetWidth(80).SetAlign(Align.center));
    dataGrid.AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("证件号", "IdentityCardNo").SetWidth(100).SetAlign(Align.center));
    dataGrid.AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("类型", "TagName").SetWidth(60).SetAlign(Align.center));
    dataGrid.AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("身份", "UserTypeStr").SetWidth(100).SetAlign(Align.center));
    dataGrid.AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("导师", "TutorName").SetWidth(80).SetAlign(Align.center));
    dataGrid.AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("导师标识", "TutorIdentityCardNo").SetWidth(80).SetAlign(Align.center));
    dataGrid.AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("所属单位", "OrganizationName").SetWidth(100).SetAlign(Align.left));
    dataGrid.AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("性别", "SexStr").SetWidth(50).SetAlign(Align.center));
    dataGrid.AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("电话", "PhoneNumber").SetWidth(90).SetAlign(Align.center));
    dataGrid.AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("邮箱", "Email").SetWidth(80).SetAlign(Align.center));
    dataGrid.AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("年级", "Grade").SetWidth(80).SetAlign(Align.center));
    dataGrid.AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("职称", "Jobtitle").SetWidth(80).SetAlign(Align.center));
    dataGrid.AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("Speciality", "专业").SetWidth(80).SetAlign(Align.center));
    dataGrid.AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("ResearchDirection", "研究方向").SetWidth(80).SetAlign(Align.center));
    dataGrid.AddToolBarButton(new ToolBarButton() { Disabled = false, Handler = "doDealSchoolUser();", IconCls = "icon-users", Id = "btnDealSchoolUser", Text = "批量同步" });
 }
@(dataGrid.ToMvcString())