<script type="text/javascript">
    function doSJ6StatisticsSearch() {
        doCloseSearch();
        $("#tbSJ6StatisticsList").datagrid('loadData', { total: 0, rows: [] });
        $("#tbSJ6StatisticsList").datagrid("load");
        doSJ6Search();
    }
    function doAddSJ6Statistics() {
        $.messager.confirm('提示', '确认新增实验室基本情况表统计(SJ6)?', function (r) {
            if (!r) return;
            $.messager.progress({ title: '提示', msg: '正在提交请求,请稍候……' });
            $.ajax({
                type: "POST",
                url: '@Url.Action("SJ6StatisticsAdd", "Statistics")' + "?date=" + new Date().getMilliseconds(),
                success: function (msg) {
                    $.messager.progress('close');
                    if (msg && msg.indexOf("出错") != -1) {
                        $.messager.show({ title: '提示', msg: msg, showType: 'show' });
                        return false;
                    }
                    doSJ6StatisticsSearch();
                }
            });
        });
        return false;
    }
    function doDeleteSJ6Statistics(id) {
        id = doGetSJ6StatisticsSelected(id);
        if (!id || id.trim() == "") {
            $.messager.show({ title: '提示', msg: "请选择要删除的项", showType: 'show' });
            return false;
        }
        $.messager.confirm('提示', '是否确认删除选中记录?', function (r) {
            if (!r) return;
            $.messager.progress({ title: '提示', msg: '正在提交请求,请稍候……' });
            $.ajax({
                type: "POST",
                url: '@Url.Action("SJ6StatisticsDelete", "Statistics")' + "?date=" + new Date().getMilliseconds(),
                data: "id=" + id,
                success: function (msg) {
                    $.messager.progress('close');
                    if (msg && msg.indexOf("出错") != -1) {
                        $.messager.show({ title: '提示', msg: msg, showType: 'show' });
