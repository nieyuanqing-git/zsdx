            return false;
        }
        $.messager.confirm('提示', '是否确认选中记录导出Txt?', function (r) {
            if (!r) return;
            var queryData = "id=" + id;
            var url = '@Url.Action("SJ6StatisticsExportTxt","Statistics")' + '?' + queryData
            window.open(url, '_blank');
        });
        return false;
    }
    function doGetSJ6StatisticsSelected(id) {
        if (!id || id.trim() == "") {
            var selectedSJ6Statistics = $("#tbSJ6StatisticsList").datagrid("getSelected");
            if (!selectedSJ6Statistics || selectedSJ6Statistics.Id.trim() == "" || selectedSJ6Statistics.Id.isDefaultGuid()) {
                return "";
            }
            id = selectedSJ6Statistics.Id;
        }
        return id;
    }
    function doOnSJ6StatisticsSelected(rowData) {
        var queryExpression = generateSJ6QueryExpress();
        queryExpression += (queryExpression == "" ? "" : "*") + "SJ6StatisticsId=\"" + rowData.Id + "\"";
        $("#tbSJ6List").datagrid('loadData', { total: 0, rows: [] });
        $("#tbSJ6List").datagrid("load", { "queryExpression": queryExpression });
    }
