<script type="text/javascript">
    function doSJ1StatisticsSearch() {
        doCloseSearch();
        $("#tbSJ1StatisticsList").datagrid('loadData', { total: 0, rows: [] });
        $("#tbSJ1StatisticsList").datagrid("load");
        doSJ1Search();
    }
    function doAddSJ1Statistics() {
        $.messager.confirm('提示', '确认新增贵重仪器设备表统计(SJ1)?', function (r) {
            if (!r) return;
            $.messager.progress({ title: '提示', msg: '正在提交请求,请稍候……' });
            $.ajax({
                type: "POST",
                url: '@Url.Action("SJ1StatisticsAdd", "Statistics")' + "?date=" + new Date().getMilliseconds(),
                success: function (msg) {
                    $.messager.progress('close');
                    if (msg && msg.indexOf("出错") != -1) {
                        $.messager.show({ title: '提示', msg: msg, showType: 'show' });
                        return false;
                    }
                    doSJ1StatisticsSearch();
                }
            });
        });
        return false;
    }
    function doDeleteSJ1Statistics(id) {
        id = doGetSJ1StatisticsSelected(id);
        if (!id || id.trim() == "") {
            $.messager.show({ title: '提示', msg: "请选择要删除的项", showType: 'show' });
            return false;
        }
        $.messager.confirm('提示', '是否确认删除选中记录?', function (r) {
            if (!r) return;
            $.messager.progress({ title: '提示', msg: '正在提交请求,请稍候……' });
            $.ajax({
                type: "POST",
                url: '@Url.Action("SJ1StatisticsDelete", "Statistics")' + "?date=" + new Date().getMilliseconds(),
                data: "id=" + id,
                success: function (msg) {
                    $.messager.progress('close');
                    if (msg && msg.indexOf("出错") != -1) {
                        $.messager.show({ title: '提示', msg: msg, showType: 'show' });
                        return false;
                    }
                    doSJ1StatisticsSearch();
                }
            });
        });
        return false;
    }
