        if (!id || id.trim() == "") {
            $.messager.show({ title: '提示', msg: "请选择要导出Txt的项", showType: 'show' });
            return false;
        }
        $.messager.confirm('提示', '是否确认选中记录导出Txt?', function (r) {
            if (!r) return;
            var queryData = "id=" + id;
            var url = '@Url.Action("SJ1StatisticsExportTxt","Statistics")' + '?' + queryData
            window.open(url, '_blank');
        });
        return false;
    }
    function doGetSJ1StatisticsSelected(id) {
        if (!id || id.trim() == "") {
            var selectedSJ1Statistics = $("#tbSJ1StatisticsList").datagrid("getSelected");
            if (!selectedSJ1Statistics || selectedSJ1Statistics.Id.trim() == "" || selectedSJ1Statistics.Id.isDefaultGuid()) {
                return "";
            }
            id = selectedSJ1Statistics.Id;
        }
        return id;
    }
    function doOnSJ1StatisticsSelected(rowData) {
        var queryExpression = generateSJ1QueryExpress();
        queryExpression += (queryExpression == "" ? "" : "*") + "SJ1StatisticsId=\"" + rowData.Id + "\"";
        $("#tbSJ1List").datagrid('loadData', { total: 0, rows: [] });
        $("#tbSJ1List").datagrid("load", { "queryExpression": queryExpression });
    }
