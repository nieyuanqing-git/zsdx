            return false;
        }
        $.messager.confirm('提示', '是否确认选中记录导出Txt?', function (r) {
            if (!r) return;
            var queryData = "id=" + id;
            var url = '@Url.Action("SJ7StatisticsExportTxt","Statistics")' + '?' + queryData
            window.open(url, '_blank');
        });
        return false;
    }
    function doGetSJ7StatisticsSelected(id) {
        if (!id || id.trim() == "") {
            var selectedSJ7Statistics = $("#tbSJ7StatisticsList").datagrid("getSelected");
            if (!selectedSJ7Statistics || selectedSJ7Statistics.Id.trim() == "" || selectedSJ7Statistics.Id.isDefaultGuid()) {
                return "";
            }
            id = selectedSJ7Statistics.Id;
        }
        return id;
    }
    function doOnSJ7StatisticsSelected(rowData) {
        var queryExpression = generateSJ7QueryExpress();
        queryExpression += (queryExpression == "" ? "" : "*") + "SJ7StatisticsId=\"" + rowData.Id + "\"";
        $("#tbSJ7List").datagrid('loadData', { total: 0, rows: [] });
        $("#tbSJ7List").datagrid("load", { "queryExpression": queryExpression });
    }
