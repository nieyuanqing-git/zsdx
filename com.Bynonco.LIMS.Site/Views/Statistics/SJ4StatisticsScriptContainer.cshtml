        if (!id || id.trim() == "") {
            $.messager.show({ title: '提示', msg: "请选择要导出Txt的项", showType: 'show' });
            return false;
        }
        $.messager.confirm('提示', '是否确认选中记录导出Txt?', function (r) {
            if (!r) return;
            var queryData = "id=" + id;
            var url = '@Url.Action("SJ4StatisticsExportTxt","Statistics")' + '?' + queryData
            window.open(url, '_blank');
        });
        return false;
    }
    function doGetSJ4StatisticsSelected(id) {
        if (!id || id.trim() == "") {
            var selectedSJ4Statistics = $("#tbSJ4StatisticsList").datagrid("getSelected");
            if (!selectedSJ4Statistics || selectedSJ4Statistics.Id.trim() == "" || selectedSJ4Statistics.Id.isDefaultGuid()) {
                return "";
            }
            id = selectedSJ4Statistics.Id;
        }
        return id;
    }
    function doOnSJ4StatisticsSelected(rowData) {
        var queryExpression = generateSJ4QueryExpress();
        queryExpression += (queryExpression == "" ? "" : "*") + "SJ4StatisticsId=\"" + rowData.Id + "\"";
        $("#tbSJ4List").datagrid('loadData', { total: 0, rows: [] });
        $("#tbSJ4List").datagrid("load", { "queryExpression": queryExpression });
    }
