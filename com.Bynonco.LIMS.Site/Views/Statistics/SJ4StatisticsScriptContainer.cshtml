<script type="text/javascript">
    function doSJ4StatisticsSearch() {
        doCloseSearch();
        $("#tbSJ4StatisticsList").datagrid('loadData', { total: 0, rows: [] });
        $("#tbSJ4StatisticsList").datagrid("load");
        doSJ4Search();
    }
    function doAddSJ4Statistics() {
        $.messager.confirm('提示', '确认新增教学实验项目表统计(SJ4)?', function (r) {
            if (!r) return;
            $.messager.progress({ title: '提示', msg: '正在提交请求,请稍候……' });
            $.ajax({
                type: "POST",
                url: '@Url.Action("SJ4StatisticsAdd", "Statistics")' + "?date=" + new Date().getMilliseconds(),
                success: function (msg) {
                    $.messager.progress('close');
                    if (msg && msg.indexOf("出错") != -1) {
                        $.messager.show({ title: '提示', msg: msg, showType: 'show' });
                        return false;
                    }
                    doSJ4StatisticsSearch();
                }
            });
        });
        return false;
    }
    function doDeleteSJ4Statistics(id) {
        id = doGetSJ4StatisticsSelected(id);
        if (!id || id.trim() == "") {
            $.messager.show({ title: '提示', msg: "请选择要删除的项", showType: 'show' });
            return false;
        }
        $.messager.confirm('提示', '是否确认删除选中记录?', function (r) {
            if (!r) return;
            $.messager.progress({ title: '提示', msg: '正在提交请求,请稍候……' });
            $.ajax({
                type: "POST",
                url: '@Url.Action("SJ4StatisticsDelete", "Statistics")' + "?date=" + new Date().getMilliseconds(),
                data: "id=" + id,
                success: function (msg) {
                    $.messager.progress('close');
                    if (msg && msg.indexOf("出错") != -1) {
                        $.messager.show({ title: '提示', msg: msg, showType: 'show' });
                        return false;
                    }
                    doSJ4StatisticsSearch();
                }
            });
        });
        return false;
    }
