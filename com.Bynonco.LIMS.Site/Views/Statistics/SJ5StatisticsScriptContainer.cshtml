<script type="text/javascript">
    function doSJ5StatisticsSearch() {
        doCloseSearch();
        $("#tbSJ5StatisticsList").datagrid('loadData', { total: 0, rows: [] });
        $("#tbSJ5StatisticsList").datagrid("load");
        doSJ5Search();
    }
    function doAddSJ5Statistics() {
        $.messager.confirm('提示', '确认新增专任实验室人员表统计(SJ5)?', function (r) {
            if (!r) return;
            $.messager.progress({ title: '提示', msg: '正在提交请求,请稍候……' });
            $.ajax({
                type: "POST",
                url: '@Url.Action("SJ5StatisticsAdd", "Statistics")' + "?date=" + new Date().getMilliseconds(),
                success: function (msg) {
                    $.messager.progress('close');
                    if (msg && msg.indexOf("出错") != -1) {
                        $.messager.show({ title: '提示', msg: msg, showType: 'show' });
                        return false;
                    }
                    doSJ5StatisticsSearch();
                }
            });
        });
        return false;
    }
    function doDeleteSJ5Statistics(id) {
        id = doGetSJ5StatisticsSelected(id);
        if (!id || id.trim() == "") {
            $.messager.show({ title: '提示', msg: "请选择要删除的项", showType: 'show' });
            return false;
        }
        $.messager.confirm('提示', '是否确认删除选中记录?', function (r) {
            if (!r) return;
            $.messager.progress({ title: '提示', msg: '正在提交请求,请稍候……' });
            $.ajax({
                type: "POST",
                url: '@Url.Action("SJ5StatisticsDelete", "Statistics")' + "?date=" + new Date().getMilliseconds(),
                data: "id=" + id,
                success: function (msg) {
                    $.messager.progress('close');
                    if (msg && msg.indexOf("出错") != -1) {
                        $.messager.show({ title: '提示', msg: msg, showType: 'show' });
                        return false;
                    }
