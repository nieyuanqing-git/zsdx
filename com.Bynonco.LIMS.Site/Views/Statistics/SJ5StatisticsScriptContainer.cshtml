            return false;
        }
        $.messager.confirm('提示', '是否确认选中记录导出Txt?', function (r) {
            if (!r) return;
            var queryData = "id=" + id;
            var url = '@Url.Action("SJ5StatisticsExportTxt","Statistics")' + '?' + queryData
            window.open(url, '_blank');
        });
        return false;
    }
    function doGetSJ5StatisticsSelected(id) {
        if (!id || id.trim() == "") {
            var selectedSJ5Statistics = $("#tbSJ5StatisticsList").datagrid("getSelected");
            if (!selectedSJ5Statistics || selectedSJ5Statistics.Id.trim() == "" || selectedSJ5Statistics.Id.isDefaultGuid()) {
                return "";
            }
            id = selectedSJ5Statistics.Id;
        }
        return id;
    }
    function doOnSJ5StatisticsSelected(rowData) {
        var queryExpression = generateSJ5QueryExpress();
        queryExpression += (queryExpression == "" ? "" : "*") + "SJ5StatisticsId=\"" + rowData.Id + "\"";
        $("#tbSJ5List").datagrid('loadData', { total: 0, rows: [] });
        $("#tbSJ5List").datagrid("load", { "queryExpression": queryExpression });
    }
