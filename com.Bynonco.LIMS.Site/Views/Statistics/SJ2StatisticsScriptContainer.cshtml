<script type="text/javascript">
    function doSJ2StatisticsSearch() {
        doCloseSearch();
        $("#tbSJ2StatisticsList").datagrid('loadData', { total: 0, rows: [] });
        $("#tbSJ2StatisticsList").datagrid("load");
        doSJ2Search();
    }
    function doAddSJ2Statistics() {
        $.messager.confirm('提示', '确认新增教学科研仪器设备增减变动情况表统计 (SJ2)?', function (r) {
            if (!r) return;
            $.messager.progress({ title: '提示', msg: '正在提交请求,请稍候……' });
            $.ajax({
                type: "POST",
                url: '@Url.Action("SJ2StatisticsAdd", "Statistics")' + "?date=" + new Date().getMilliseconds(),
                success: function (msg) {
                    $.messager.progress('close');
                    if (msg && msg.indexOf("出错") != -1) {
                        $.messager.show({ title: '提示', msg: msg, showType: 'show' });
                        return false;
                    }
                    doSJ2StatisticsSearch();
                }
            });
        });
        return false;
    }
    function doDeleteSJ2Statistics(id) {
        id = doGetSJ2StatisticsSelected(id);
        if (!id || id.trim() == "") {
            $.messager.show({ title: '提示', msg: "请选择要删除的项", showType: 'show' });
            return false;
        }
        $.messager.confirm('提示', '是否确认删除选中记录?', function (r) {
            if (!r) return;
            $.messager.progress({ title: '提示', msg: '正在提交请求,请稍候……' });
            $.ajax({
                type: "POST",
                url: '@Url.Action("SJ2StatisticsDelete", "Statistics")' + "?date=" + new Date().getMilliseconds(),
                data: "id=" + id,
                success: function (msg) {
                    $.messager.progress('close');
                    if (msg && msg.indexOf("出错") != -1) {
                        $.messager.show({ title: '提示', msg: msg, showType: 'show' });
                        return false;
                    }
                    doSJ2StatisticsSearch();
                }
            });
        });
        return false;
    }
