            $.messager.show({ title: '提示', msg: "请选择要导出Txt的项", showType: 'show' });
            return false;
        }
        $.messager.confirm('提示', '是否确认选中记录导出Txt?', function (r) {
            if (!r) return;
            var queryData = "id=" + id;
            var url = '@Url.Action("SJ2StatisticsExportTxt","Statistics")' + '?' + queryData
            window.open(url, '_blank');
        });
        return false;
    }
    function doGetSJ2StatisticsSelected(id) {
        if (!id || id.trim() == "") {
            var selectedSJ2Statistics = $("#tbSJ2StatisticsList").datagrid("getSelected");
            if (!selectedSJ2Statistics || selectedSJ2Statistics.Id.trim() == "" || selectedSJ2Statistics.Id.isDefaultGuid()) {
                return "";
            }
            id = selectedSJ2Statistics.Id;
        }
        return id;
    }
    function doOnSJ2StatisticsSelected(rowData) {
        var queryExpression = generateSJ2QueryExpress();
        queryExpression += (queryExpression == "" ? "" : "*") + "SJ2StatisticsId=\"" + rowData.Id + "\"";
        $("#tbSJ2List").datagrid('loadData', { total: 0, rows: [] });
        $("#tbSJ2List").datagrid("load", { "queryExpression": queryExpression });
    }
