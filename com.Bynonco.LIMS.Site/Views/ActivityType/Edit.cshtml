@model com.Bynonco.LIMS.Model.ActivityType
@using com.Bynonco.JqueryEasyUI.Core; 
<div id="divActivityTypeEdit">
 <form id="frmActivityTypeEdit" action="#">
    @Html.Hidden("Id",Model == null ? "": Model.Id.ToString())
    <table id="tdActivityTypeEdit" class="edit-table"  style="width:385px;">
        <tr>
            <th>名称</th>
            <td>
                @Html.JValidateBox("Name").SetValue(Model == null ? "" : Model.Name).SetWidth(200).ToMvcString()
                <span class="required">必填</span>
            </td>
        </tr>
        <tr>
            <th>是否停用</th>
            <td>
                @Html.CheckBox("IsStop", Model == null ? false : Model.IsStop)
            </td>
        </tr>
        <tr>
            <th>备注</th>
            <td>
                @Html.TextArea("Remark", Model == null ? "" : Model.Remark, new { style = "width:96%;height:80px" })
            </td>
        </tr>
    </table>
  </form>
</div> 
