@using com.Bynonco.JqueryEasyUI.Core;
<div id="divSampleTestRecordList">
   @{
       var queryExpression = ViewData["QueryExpression"];
       var dataGrid = Html.JDataGrid("tbSampleTestRecordList")
            .SetUrl(Url.Action("GetSampleTestRecordLog", new { queryExpression = queryExpression, time = DateTime.Now.Millisecond.ToString() }))
            .SetWidth(800)
            .SetHeight(420)
            .SetPageSize(15)
            .SetPagination(false)
            .SetShowPrintButton(false)
            .SetShowRefreshButton(false)
            .SetMutiSelect(false)
            .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("编码", "Id").SetHidden(true))
            .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("编辑", "EditOperate").SetWidth(50).SetAlign(Align.center))
            .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("操作人", "TesterName").SetWidth(120).SetAlign(Align.center))
            .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("类别", "CategoryName").SetWidth(100).SetAlign(Align.center))
            .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("开始时间", "BeginTimeStr").SetWidth(130).SetAlign(Align.center))
            .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("结束时间", "EndTimeStr").SetWidth(130).SetAlign(Align.center))
            .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("温度℃", "Temperature").SetWidth(60).SetAlign(Align.center))
            .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("湿度%", "Humidity").SetWidth(60).SetAlign(Align.center))
            .AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("测试内容", "TestContent").SetWidth(350).SetAlign(Align.left))
            .AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("备注", "Remark").SetWidth(800).SetAlign(Align.left));
   }
   @(dataGrid.ToMvcString())
</div>