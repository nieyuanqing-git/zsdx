@using com.Bynonco.JqueryEasyUI.Core;
<style type="text/css">
    #tbSampleApplyCancel th{text-align:right; width:50px; line-height:20px;font-weight:normal;}
    #tbSampleApplyCancel td{text-align:left;width:250px;line-height:20px;}
</style>
<script type="text/javascript">
    function doCancelReset() {
        $("#Remark").val("");
        return true;
    }
    function doGetCancelRemark() {
        return $("#Remark").val();
    }
</script>
<div id="divSampleApplyCancel">
    <table id="tbSampleApplyCancel" style="border:0.5px; margin-top:2px">
        <tr>
            <th>备注:</th>
            <td>
                @Html.TextArea("Remark",new { style = "font-size:12px;text-decoration:none;height:60px;width:350px" })
            </td>
        </tr>
    </table>
</div>