@using com.Bynonco.JqueryEasyUI.Core;
@{
    var querExpression = ViewData["QueryExpression"] == null ? "" : ViewData["QueryExpression"].ToString();
    var dataGrid = Html.JDataGrid("tbSampleItemList")
        .SetWidth(800)
        .SetHeight(465)
        .SetSortName("OrderNo")
        .SetUrl(Url.Action("GetSampleItemList", "SampleItem", new { queryExpression = querExpression, time = DateTime.Now.Millisecond.ToString() }))
        .SetPagination(false)
        .SetOnLoadSuccess("doInitSelectedSampleItems();")
        .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("编码", "Id").SetHidden(true))
        .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("说明", "DirectionsStr").SetHidden(true))
        .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("项目名称", "Name").SetWidth(200).SetAlign(Align.left))
        .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("项目价格", "UnitPrice").SetWidth(60).SetAlign(Align.center))
        .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("所属设备", "EquipmentName").SetWidth(150).SetAlign(Align.left))
        .AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("检测条件及要求填写说明", "Directions").SetWidth(600).SetAlign(Align.left))
        .AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("备注", "Remark").SetWidth(600).SetAlign(Align.left));
 }
@(dataGrid.ToMvcString())
