@model com.Bynonco.LIMS.Model.View.ViewUserSampleItemDiscount
@using com.Bynonco.JqueryEasyUI.Core;
<div id="divUserSampleitemDiscount"> 
<form id="frmUserSampleDiscount" action="#">
    @Html.Hidden("Id",Model == null ? "" : Model.Id.ToString())
    <table id="tbSampleItemUserDiscountEdit" class="edit-table" style="width:395px;overflow:hidden">
        <tr>
            <th>项目名称</th>
            <td id="tdSampleItemId" style="padding-left:3px">
                @(Html.TokenInput("SampleItemIds")
                .SetUrl(Url.Action("GetSampleItemListByKeyWord", "SampleItem")+ "?time=" + DateTime.Now.Millisecond.ToString())
                .SetPrePopulate(ViewData["SampleItemJson"] == null ? null : ViewData["SampleItemJson"].ToString())
                .SetSingle(false).SetWidth(255).ToMvcString())
            </td>
        </tr>
         <tr>
            <th>用户名称</th>
            <td id="tdUserId" style="padding-left:3px">
                @(Html.TokenInput("UserIds")
                .SetUrl(Url.Action("GetUserListByKeyWord", "User") + "?time=" + DateTime.Now.Millisecond.ToString())
                .SetPrePopulate(ViewData["UserJson"] == null ? null : ViewData["UserJson"].ToString())
                .SetSingle(false).SetWidth(255).ToMvcString())
            </td>
        </tr>
        <tr>
            <th>折扣比</th>
            <td>
                @Html.JValidateBox("Discount").SetValue(Model == null ? "" : Model.Discount.ToString()).SetValidateType(ValidateType.number).SetInvalidMessage("请输入正确的大于或等于0的折扣比").SetWidth(250).ToMvcString()
                <span class="required">%</span>
            </td>
        </tr>
        <tr>
            <th>是否停用</th>
           <td>
                @Html.JComboBox("IsStop").SetData(ViewData["IsStopJson"]).SetWidth(255).ToMvcString()
            </td>
        </tr>
        <tr>
            <th>备注</th>
            <td>
                @Html.TextArea("Remark", Model == null ? "" : Model.Remark, 3, 50, null)
            </td>
        </tr>
    </table>
  </form>
</div>
 <script type="text/javascript">
     $(function () {
         $("#tdSampleItemId ul.token-input-list-facebook").css("width", "253px");
         $("#tdUserId ul.token-input-list-facebook").css("width", "253px");
     });
 </script>
