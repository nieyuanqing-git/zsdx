                        { field: 'Country', title: '原产国/生产厂', width: 100, rowspan: 2, align: 'center' },
					    { field: 'EquipmentAdminName', title: '管理员', width: 80, rowspan: 2, sortable: true, align: 'center' },
					    { field: 'EquipmentAdminLinkTelNo', title: '联系电话', width: 120, rowspan: 2, align: 'center' }
				      ],
                      [
					    { field: 'ChargeStatndardOfSampleNum', title: '元/样', width: 80, align: 'center', rowspan: 2 },
                        { field: 'ChargeStatndardOfHour', title: '元/小时', width: 80, rowspan: 2, align: 'center' },
					    { field: 'ChargeStatndardOfDay', title: '元/天', width: 80, rowspan: 2, sortable: true, align: 'center' }
				     ]],
            pagination: false,
            rownumbers: true,
            toolbar: [
                {
                    id: 'btnExpert',
                    text: '导出',
                    @(!equipmentApplyStatisticsPrivilige.IsEnableExpert?"disabled:true,":"")
                    iconCls: 'icon-export',
                    handler: function () {
                        doEquipmentApplySummaryStaticsExpert();
                }
            }]
        });
    });
	</script>
