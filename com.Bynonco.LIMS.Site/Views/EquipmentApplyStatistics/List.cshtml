<script type="text/javascript">
    $(function () {
        $('#tbEquipmentApplySummaryStaticsList').datagrid({
            iconCls: 'icon-save',
            url: '@Url.Action("GetViewEquipmentApplySummaryStatList","EquipmentApplyStatistics")',
            remoteSort: false,
            idField: 'code',
            frozenColumns: [[
                    { title: 'Id', field: 'Id', width: 100, sortable: true, align: 'center', hidden: true },
	                { title: '经费来源', field: 'FundsSource', width: 100, sortable: true, align: 'center' },
                    { title: '仪器名称', field: 'Name', width: 200, sortable: true, align: 'center' },
                    { title: '学校仪器编号', field: 'CategoryCode', width: 100, sortable: true, align: 'center' }
				]],
            columns: [[
			            { title: '服务收费', colspan: 3 },
