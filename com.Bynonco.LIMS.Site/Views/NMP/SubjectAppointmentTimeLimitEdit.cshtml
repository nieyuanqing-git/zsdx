@model com.Bynonco.LIMS.Model.NMPSubjectAppointmentTimeLimit
@using com.Bynonco.JqueryEasyUI.Core;
<div id="divSubjectAppointmentTimeLimitEdit">
    <form id="frmSubjectAppointmentTimeLimitEdit" action="#">
    @Html.Hidden("NMPSubjectAppointmentTimeLimitId", Model == null ? "" : Model.Id.ToString())
    <table class="edit-table" style="width:500px;">
        <tr>
            <th><span class="required">*</span>课题组</th>
            <td id="tbSelectSubjectAppointmentTimeLimitSubjectId">
                @(Html.TokenInput("NMPSubjectAppointmentTimeLimitSubjectId")
                .SetUrl(Url.Action("GetSubjectListByKeyWord", "Subject"))
                .SetPrePopulate(ViewData["AppointmentTimeLimitSubjectJson"] == null || string.IsNullOrWhiteSpace(ViewData["AppointmentTimeLimitSubjectJson"].ToString()) ? null : ViewData["AppointmentTimeLimitSubjectJson"].ToString())
                .SetSingle(true)
                .SetPreventDuplicates(true)
                .SetWidth(200)
                .ToMvcString())
            </td>
        </tr>
        <tr>
            <th><span class="required">*</span>时间限制</th>
            <td>
                @Html.JValidateBox("NMPSubjectAppointmentTimeLimitPeriod").SetValue(Model == null ? "" : Model.Period.ToString()).SetValidateType(ValidateType.positiveIntNumber).SetWidth(150).ToMvcString()
                天内可预约
                @Html.JValidateBox("NMPSubjectAppointmentTimeLimitDuration").SetValue(Model == null ? "" : Model.Duration.ToString()).SetValidateType(ValidateType.positiveIntNumber).SetWidth(150).ToMvcString()
                小时 
            </td>
        </tr>
        <tr>
            <th>备注</th>
            <td>
                @Html.TextArea("NMPSubjectAppointmentTimeLimitRemark", Model == null ? "" : Model.Remark, new { style = "font-weight:normal;font-size:12px;text-decoration:none;height:60px;width:420px;margin-right:5px;" })
            </td>
        </tr>
    </table>
    </form>
</div>
<script type="text/javascript">
    $(function () {
        $("#tbSelectSubjectAppointmentTimeLimitSubjectId ul.token-input-list-facebook").css("width", "420px");
    });
</script>