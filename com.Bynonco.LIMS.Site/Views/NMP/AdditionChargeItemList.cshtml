@using com.Bynonco.JqueryEasyUI.Core;
@{
    var nmpPrivilige =  ViewData["NMPId"] == null ?
        com.Bynonco.LIMS.BLL.Business.Privilige.PriviligeFactory.GetNMPPrivilige(User.Identity.Name) :
        com.Bynonco.LIMS.BLL.Business.Privilige.PriviligeFactory.GetNMPPrivilige(User.Identity.Name, new Guid(ViewData["NMPId"].ToString()));
    var dataGrid = Html.JDataGrid("tbNMPAddtionChargeItemList")
    .SetUrl(Url.Action("GetGridNMPAdditionChargeItemList", "NMP"))
    .AddQueryParam("queryExpression", string.Format("NMPId=\"{0}\"", ViewData["NMPId"] == null ? default(Guid).ToString() : ViewData["NMPId"].ToString()))
    .SetHeight(650)
    .SetPageSize(20)
    .SetSortName("Name")
    .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("编码", "Id").SetHidden(true))
    .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("名称", "Name").SetWidth(252).SetAlign(Align.left))
    .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("价格(元)", "StandardPrice").SetWidth(100).SetAlign(Align.center))
    .AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("是否停用", "IsStopStr").SetWidth(80).SetAlign(Align.center))
    .AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("备注", "Remark").SetSortable(false).SetWidth(800).SetAlign(Align.left));
    dataGrid.SetShowAddButton(nmpPrivilige.IsEnableAddAddtionChargeItem);
    dataGrid.SetShowEditButton(nmpPrivilige.IsEnableEditAddtionChargeItem);
    dataGrid.SetShowDeleteButton(nmpPrivilige.IsEnableDeleteAddtionChargeItem);
    if (nmpPrivilige.IsEnableAddAddtionChargeItem)
    {
        dataGrid.SetAddScript("doAddOrEditAdditionChargeItem('');");
    }
    if (nmpPrivilige.IsEnableEditAddtionChargeItem)
    {
        dataGrid.SetEditScript("doEditAdditionChargeItem();");
        dataGrid.SetOnDblClickRow("doAddOrEditAdditionChargeItem(rowData.Id);");
    }
    if (nmpPrivilige.IsEnableDeleteAddtionChargeItem)
    {
        dataGrid.SetDeleteScript("doDeleteAdditionChargeItem();");
    }
}
@(dataGrid.ToMvcString()) 