        <div id='divEquipmentRunSum' class='RunTag'>
            @Html.Partial("../UsedConfirm/EquipmentRunConditionSumTotal")
        </div>
        <div id='divEquipmentSubjectRunSum' class='RunTag hide'>
            @Html.Partial("../UsedConfirm/EquipmentSubjectRunConditionSumTotal")
        </div>
    </div>
</div>
@Html.Partial("../UsedConfirm/EquipmentRunConditionSumTotalScriptContainer")