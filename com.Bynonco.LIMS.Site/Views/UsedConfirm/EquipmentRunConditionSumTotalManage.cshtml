@using com.Bynonco.JqueryEasyUI.Core;
@{
    Layout = ViewBag.Layout;
}
<div class='layout-center-full'> 
    <div style="border:1px solid #D3D3D3;padding:10px 20px;_padding:10px 20px 0;"> 
        @Html.Partial("../UsedConfirm/EquipmentRunConditionSumTotalSearch")
    </div>
    <div style="height:10px;background-color:#ECEDF1;"></div>
    <div>
         <ul style="border-bottom:0;background-color:#ECEDF1;" class="tabs">
