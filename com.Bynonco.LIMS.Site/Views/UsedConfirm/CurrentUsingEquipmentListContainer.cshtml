@using com.Bynonco.JqueryEasyUI.Core;
@{
    Layout = ViewBag.Layout;
}
<div class="search-grid hide">
    <div class="search-inner-box">
        @Html.Partial("../UsedConfirm/CurrentUsingEquipmentSearch")
    </div>
</div>
<div>
    @Html.Partial("../UsedConfirm/CurrentUsingEquipmentList")
</div>
<div style="display:none"> 
    @Html.Partial("../UsedConfirm/ScriptContainer")
</div>
<script type="text/javascript">
    function doCurUsingEquipmentSearch() {
        var queryExpression = generateCurrentUsingEquipmentQueryExpression();
        $("#tbCurrentUsingEquipmentList").datagrid('loadData', { total: 0, rows: [] });
        $("#tbCurrentUsingEquipmentList").datagrid("load", { "queryExpression": queryExpression.trim() });
        return false;
    }
    function doSaveUsedConfirmCallBack(editUsedConfirmDialog) {
        doCurUsingEquipmentSearch();
        if (editUsedConfirmDialog)
            editUsedConfirmDialog.dialog("close");
    }
    function doChargeUsedConfirmCallBack(editUsedConfirmDialog) {
        doCurUsingEquipmentSearch();
        if (editUsedConfirmDialog)
            editUsedConfirmDialog.dialog("close");
    }
    function doDeleteUsedConfirmCallBack(editUsedConfirmDialog) {
        doCurUsingEquipmentSearch();
        if (editUsedConfirmDialog)
            editUsedConfirmDialog.dialog("close");
    }
</script>