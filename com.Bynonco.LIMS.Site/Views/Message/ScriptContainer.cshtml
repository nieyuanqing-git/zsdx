                    $.messager.progress('close');
                    if (msg && msg.indexOf("出错") != -1) {
                        $.messager.show({ title: '提示', msg: msg, showType: 'show' });
                        return false;
                    }
                    $.messager.show({ title: '设置消息未读成功', msg: msg, showType: 'show' });
                    doSearch();
                }
            });
        });
        return false;
    }
     function doEditMessage(id) {
