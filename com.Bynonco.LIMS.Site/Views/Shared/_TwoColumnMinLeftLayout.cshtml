<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    @{
        var orgName = ViewData["OrgName"] == null ? "" : ViewData["OrgName"].ToString() + "-";
        var title = orgName + (ViewBag.Title == null ? "" : ViewBag.Title);
    }
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
    <title>@title</title>
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Content/main.css")" />
	<link rel="stylesheet" href="@Url.Content("~/JqueryPlugin/JqueryEasyUI/themes/gray/easyui.css")" type="text/css" media="screen" />
    <link rel="stylesheet" href="@Url.Content("~/JqueryPlugin/JqueryEasyUI/themes/gray/tipped.css")" type="text/css" media="screen" />
    <link rel="stylesheet" href="@Url.Content("~/JqueryPlugin/JqueryEasyUI/themes/gray/token-input-facebook.css")" type="text/css" media="screen" />
    <link type="text/css" href="@Url.Content("~/JqueryPlugin/JqueryMenu/fg.menu.css")"  media="screen" rel="stylesheet" />
    <link type="text/css" href="@Url.Content("~/JqueryPlugin/JqueryMenu/theme/black/css.css")" media="screen" rel="stylesheet" />
	<link rel="stylesheet" href="@Url.Content("~/JqueryPlugin/JqueryEasyUI/themes/icon.css")" type="text/css" media="screen" />
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Content/home.css")" />
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Content/newPagination.css")" />

	<script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/JqueryPlugin/JqueryMenu/fg.menu.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/JqueryPlugin/JqueryEasyUI/jquery.easyui.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/JqueryPlugin/JqueryEasyUI/locale/easyui-lang-zh_CN.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/JqueryPlugin/JqueryEasyUI/plugins/jquery.excanvas.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/JqueryPlugin/JqueryEasyUI/plugins/jquery.tipped.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/JqueryPlugin/JqueryEasyUI/plugins/jquery.tokeninput.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/commond.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/home.js")" type="text/javascript"></script>
    @Html.Partial("GetIsAjax")
    @RenderSection("ImportCssAndJs", false)
     <!--[if lte IE 6]>
        <script src="@Url.Content("~/Scripts/DD_belatedPNG_0.0.8a.js")" type="text/javascript" ></script>
        <script type="text/javascript">
               DD_belatedPNG.fix('a, img, .icon');
        </script>
    <![endif]-->
</head>
<body>
    <div class="top">
        <div class="top-box">
            @Html.Partial("HomeMenu")
        </div>
    </div>
    <div class='top-login-box'>
        @{
            if (Request.IsAuthenticated && ViewData["LoginUser"] != null)
            {
                var loginUser = (com.Bynonco.LIMS.Model.User)ViewData["LoginUser"];
                @Html.Partial("../Account/TopLoginInfo", loginUser)
            }
            else
            {
                <div style='width:600px;float:right'>
                    @Html.Partial("../Account/TopLogin")
                </div>
            }
        }
        <div class="clear-both"></div>
    </div>
    <div class="main-box">
        <div class="main-box-inner">
            <div class="main-box-left main-box-left-xs">
                @RenderSection("MainLeft", true)
            </div>
            <div class="main-box-right main-box-right-xl">
                @RenderSection("MainRight", true)
            </div>
        </div>
    </div>
    @RenderSection("BottomBox", false)
    <div class="footer">
        @Html.Partial("Footer")
    </div>
</body>
</html>