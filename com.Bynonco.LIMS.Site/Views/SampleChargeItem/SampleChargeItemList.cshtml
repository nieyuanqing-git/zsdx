@using com.Bynonco.JqueryEasyUI.Core;
@{
    var queryExpression = ViewData["QueryExpression"];
    var dataGrid = Html.JDataGrid("tbSampleApplyChargeItem")
        .SetWidth(773)
        .SetHeight(450)
        .SetShowAddButton(true)
        .SetUrl(Url.Action("GetSampleApplyChargeItemList", "SampleManage", new { queryExpression = queryExpression }))
        .SetAddScript("doAddOrEditSampleApplyChargeItem('');")
        .SetDeleteScript("doDeleteSampleApplyChargeItem('');")
        .SetShowDeleteButton(true)
        .SetShowPrintButton(true)
        .SetRefreshScript("doChargeItemRefresh();")
        .SetOnDblClickRow("doAddOrEditSampleApplyChargeItem(rowData.SampleApplyChargeItemId);")
        .SetSortName("ChargeTime")
        .SetSortOrder(SortOrder.desc)
        .SetPagination(false)
        .AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("操作", "operate").SetWidth(60).SetAlign(Align.center))
        .AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("编码", "SampleApplyChargeItemId").SetHidden(true))
        .AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("状态", "ChargeStatus").SetHidden(true))
        .AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("名称", "SampleChargeItemName").SetWidth(200).SetAlign(Align.left))
        .AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("金额", "Price").SetWidth(80).SetAlign(Align.center))
        .AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("数量", "Quantity").SetWidth(80).SetAlign(Align.center))
        .AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("状态", "ChargeStatusStr").SetWidth(60).SetAlign(Align.center))
        .AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("收费人", "ChargeOperatorName").SetWidth(60).SetAlign(Align.center))
        .AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("收费时间", "ChargeTimeStr").SetWidth(150).SetAlign(Align.center))
        .AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("其他", "Other").SetWidth(200).SetAlign(Align.left))
        .AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("备注", "Remark").SetWidth(350).SetAlign(Align.left));
 }
 @(dataGrid.ToMvcString())

