@model com.Bynonco.LIMS.Model.SampleStatus
@using com.Bynonco.JqueryEasyUI.Core; 
<div id="divSampleStatusEdit"> 
<form id="frmSampleStatus" action="#">
    @Html.Hidden("Id",Model == null ? "" : Model.Id.ToString())
    <table id="tbSampleStatusEdit" class="edit-table">
        <tr>
            <th>名称</th>
            <td>
                 @Html.JValidateBox("Name").SetValue(Model == null ? "" : Model.Name).SetWidth(230).SetInvalidMessage("请输入样本状态名称").SetValidateType(ValidateType.required).ToMvcString()
                 <span class="required">必填</span>
            </td>
        </tr>
        <tr>
            <th>排序号</th>
            <td>
                @Html.JValidateBox("OrderNo").SetValue(Model == null ? "" : Model.OrderNo.Value.ToString()).SetValidateType(ValidateType.intNumber).SetWidth(230).ToMvcString()
            </td>
        </tr>
        <tr>
            <th>助记符</th>
            <td>
                @Html.JValidateBox("InputStr").SetValue(Model == null ? "" : Model.InputStr).SetWidth(230).SetValidateType(ValidateType.none).ToMvcString()
            </td>
        </tr>
            <tr>
            <th>是否停用</th>
           <td>
                @Html.JComboBox("IsStop").SetData(ViewData["IsStopJson"]).SetWidth(235).ToMvcString()
                <span class="required">必填</span>
            </td>
        </tr>
        <tr>
            <th>备注</th>
            <td>
                @Html.TextArea("Remark", Model == null ? "" : Model.Remark, 3, 50, null)
            </td>
        </tr>
    </table>
  </form>
</div>