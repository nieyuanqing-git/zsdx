@using com.Bynonco.JqueryEasyUI.Core;
@{
    var dataGrid = Html.JDataGrid("tbSelectEquipmentList")
        .SetUrl(Url.Action("GetSampleViewEquipmentList", "Equipment") +"?time=" + DateTime.Now.Millisecond.ToString())
        .SetWidth(800)
        .SetHeight(450)
        .SetPagination(false)
        .SetPageSize(15)
        .SetSortName("Name")
        .SetOnLoadSuccess("doInitSelectedEquipments();")
        .SetShowSearchButton(true)
        .SetSearchScript("doShowSearch();")
        .SetShowRefreshButton(false)
        .AddToolBarButton(new ToolBarButton() { Disabled = false, Handler = "doShowSearch();", IconCls = "icon-reload", Id = "btnReload", Text = "显示全部" })
        .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("编码", "Id").SetHidden(true))
        .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("IsEnableSelectSampleSendTime", "IsEnableSelectSampleSendTime").SetHidden(true))
        .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("设备名称", "Name").SetWidth(300).SetAlign(Align.left))
        .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("型号", "Model").SetWidth(150).SetAlign(Align.left))
        .AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("放置地点", "RoomName").SetWidth(300).SetAlign(Align.left));
        }
@(dataGrid.ToMvcString())
