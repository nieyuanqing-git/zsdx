@{
    Layout = ViewBag.Layout;
}
 <div class="search-grid hide">
    <div class="search-inner-box">
        @Html.Partial("../EquipmentRepairFundsApply/EquipmentRepairFundsApplySearch")
    </div>
</div>
<div>@Html.Partial("../EquipmentRepairFundsApply/EquipmentRepairFundsApplyList")</div>    
<div>@Html.Partial("../EquipmentRepairFundsApply/ScriptContainer")</div>    
<script type="text/javascript">
    function doSearch() {
        var queryExpression = generateQueryExpression();
        $("#tbEquipmentRepairFundsApplyList").datagrid('loadData', { total: 0, rows: [] });
        $("#tbEquipmentRepairFundsApplyList").datagrid("reload", { "queryExpression": queryExpression.trim(), "time": new Date().getMilliseconds() });
        return false;
    }
</script>