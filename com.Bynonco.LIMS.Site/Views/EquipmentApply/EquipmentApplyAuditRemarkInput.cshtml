@{ var title = ViewData["Title"] == null ? "申请单审核" : ViewData["Title"].ToString();}
<div id="divEquipmentAuditRemarkInput">
    <form id="frmEquipmentAuditRemarkInput">
    @Html.Hidden("EquipmentApplyId", ViewData["EquipmentApplyId"].ToString())
        <table class="edit-table">
             <tr>
                <th>备注</th>
                <td>
                    @Html.TextArea("Remark", ViewData["Remark"] != null ? ViewData["Remark"].ToString() : "", new { style = "font-size:12px;text-decoration:none;height:60px;width:350px" })
                </td>
            </tr>
        </table>
    </form>
</div>
<script type="text/javascript">
    $(function () {
        setTimeout(function(){$("div.panel-title").text("@title");},100);
    });
</script>