@using com.Bynonco.JqueryEasyUI.Core;
@using com.Bynonco.LIMS.BLL.Business.Customer.Factory;
@{
    var customer = CustomerFactory.GetCustomer();
    var customerIsShowRememberMe = customer == null ? true : customer.GetIsLoginShowRememberMe();
}
<form id="frmLogin" name="frmLogin" action="#">
<div class="edit-info hide">
    <div>
        <span style="float: left; height: 35px; line-height: 35px; padding-right: 10px;" id='spHomeLoginType'>类&nbsp;&nbsp;型</span>
        <div class="text-box">
            <strong>
                 @Html.JComboBox("HomeLoginType").SetData(ViewData["LoginTypeJson"]).SetWidth(145).ToMvcString()
            </strong>
        </div>
    </div>
</div>
<div class="edit-info">
    <div class="bdmain">
        <span style="float: left; height: 35px; line-height: 35px; padding-right: 10px;" id='spHomeLoginName'>账&nbsp;&nbsp;户</span>
        <div class="text-box">
            <strong>
                @Html.JValidateBox("LoginName").SetWidth(140).SetHeight(27).AddClass("textinp").ToMvcString()
            </strong>
        </div>
    </div>
</div>

<div class="edit-info">
    <div class="bdmain">
        <span style="float: left; height: 35px; line-height: 35px; padding-right: 10px;"  id='spHomeLoginPassword'>密&nbsp;&nbsp;码</span>
        <div class="text-box">
            <strong>
                @Html.JValidateBox("LoginPassword").SetHeight(27).SetPasswordMode(true).SetWidth(140).AddClass("textinp").ToMvcString()
            </strong>
        </div>
    </div>
</div>
<div class="edit-info @(customerIsShowRememberMe ? "" : "hide")">
    <div class="bdmain">
        @Html.CheckBox("IsRememberMe")<span>记住密码</span>
        &nbsp; &nbsp;<img id="imgLoading" src="@Url.Content("~/JqueryPlugin/JqueryEasyUI/themes/gray/images/tree_loading.gif")" class="hide"/>
        &nbsp; &nbsp;<a href='@Url.Action("ForgetPassword", "Account")' style='float: right; padding-right: 15px; text-decoration: underline;'>忘记密码?</a>
    </div>
</div>
<div class="edit-info">
    <div class="bdmain" style="padding:0 10px;width: 190px;">
        <a class="botton" href="javascript:" onclick="doLoginSubmit()" style="margin-left:20px">
            <span>
                <span>登&nbsp;&nbsp;录</span>
            </span>
        </a>
        <a class="botton botton-gray" href="@Url.Action("Register", "Account")" style="margin-left:20px">
            <span>
                <span>注&nbsp;&nbsp;册</span>
            </span>
        </a>
    </div>
</div>
</form>
<script type="text/javascript">
    $(function () {
        $("#frmLogin").find("#LoginPassword").val("");
        $("#frmLogin").find("#LoginName").val("");
    });
</script>