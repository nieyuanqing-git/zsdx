@using com.Bynonco.JqueryEasyUI.Core;
@{
    var url = Url.Action("GetGridCostDeductSynList", "CostDeduct");

    var dataGrid = Html.JDataGrid("tbViewCostDeductSynList")
    .SetUrl(url)
    .SetHeight(550)
    .SetPageSize(10)
    .SetSortName("SynTime")
    .SetSortOrder(SortOrder.desc)
    .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("编码", "Id").SetHidden(true))
    .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("使用人", "UserName").SetWidth(60).SetAlign(Align.center))
    .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("付费人", "PayerName").SetWidth(60).SetAlign(Align.center))
    .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("创建时间", "CreateTimeStr").SetWidth(100).SetAlign(Align.center))
    .AddFrozenColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("记录类型", "CostDeductType").SetWidth(100).SetAlign(Align.center))
    .AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("同步ID", "DeductId").SetWidth(60).SetAlign(Align.center))
    .AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("同步时间", "SynTimeStr").SetWidth(130).SetAlign(Align.center))
    .AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("同步状态", "IsSynedStr").SetWidth(80).SetAlign(Align.center))
    .AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("同步真实币", "RealCurrency").SetWidth(80).SetAlign(Align.left))
    .AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("同步虚拟币", "VirtualCurrency").SetWidth(80).SetAlign(Align.left))
    .AddColum(new com.Bynonco.JqueryEasyUI.Core.DataGridColumn("备注", "Remark").SetWidth(500).SetAlign(Align.left))
    .SetShowSearchButton(true)
    .SetShowAddButton(false)
    .SetShowPrintButton(false);
    dataGrid.SetAddScript("doAddOrEditManualCostDeduct('');");
    dataGrid.SetSearchScript("doShowSearch()");
}
@(dataGrid.ToMvcString()) 