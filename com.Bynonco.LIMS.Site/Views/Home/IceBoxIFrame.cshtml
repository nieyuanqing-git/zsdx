@using com.Bynonco.JqueryEasyUI.Core;
@{
    Layout = "~/Views/Shared/_OneColumnLayout.cshtml";
    ViewBag.Title = "冰箱监控";
    var orgXPath = ViewData["OrgXPath"] == null || ViewData["OrgXPath"] == "" ? "000" : ViewData["OrgXPath"].ToString();
    var url = "http://localhost";
}
@section ImportCssAndJs
{
<script type="text/javascript">
    function reinitIframe() {
        try {
            var nowframeid = "iframeIceBox";
            var iframe = document.getElementById(nowframeid);
            var height = 0;
            try {
                height = iframe.contentWindow.document.documentElement.scrollHeight;
            } catch (e) { }
            if (height == 0) {
                height = 500;
                $("#iframeIceBox").attr("scrolling", "auto");
            }
            else
                iframe.height = height - 35;
        } catch (e) { }
    }
    setInterval("reinitIframe()", 1000);
</script>  

}
@section MainFull
{
    <iframe id="iframeIceBox" src="@url" scrolling="no" frameborder="0" width="1003px" height="500px"></iframe>
}