@model com.Bynonco.LIMS.Model.EquipmentOpenTrainingCarryOut
@using com.Bynonco.JqueryEasyUI.Core; 
<div id="divEquipmentOpenTrainingCarryOutView">
@if (Model != null)
{
    <table class="edit-table"  style="width:545px;">
        <tr>
            <th>学期</th>
            <td>@(Model.EquipmentOpenTraining != null && Model.EquipmentOpenTraining.Semester != null ? Model.EquipmentOpenTraining.Semester.Name : "")</td>
            <th>状态</th>
            <td>@Model.StatusStr</td>
        </tr>
        <tr>
            <th>培训名称</th>
            <td colspan='3'>@(Model.Name)</td>
        </tr>
        <tr>
            <th>培训申请单</th>
            <td colspan='3'>
                @(Model.EquipmentOpenTraining != null ? Model.EquipmentOpenTraining.Name + (Model.EquipmentOpenTraining.Equipment != null ? " [" + Model.EquipmentOpenTraining.Equipment.Name + "]" : "") : "")
            </td>
        </tr>
        <tr>
            <th colspan='4'>考核安排</th>
        </tr>
        <tr>
            <th>考核方式</th>
            <td>@Model.ExamineType</td>
            <th>考试时间</th>
            <td>@(Model.ExamineTime.HasValue ? Model.ExamineTime.Value.ToString("yyyy-MM-dd") : "")</td>
        </tr>
        <tr>
            <th>考核地点</th>
            <td colspan='3'>@Model.ExaminePlace</td>
        </tr>
        <tr>
            <th colspan='4'>报名注意事项</th>
        </tr>
         <tr>
            <th>开始时间</th>
            <td>@Model.ApplyStratTime.ToString("yyyy-MM-dd")</td>
            <th>结束时间</th>
            <td>@Model.ApplyEndTime.ToString("yyyy-MM-dd")</td>
        </tr>
        <tr>
            <th>报名条件</th>
            <td>@Model.ApplyCondition</td>
            <th>考试地点</th>
            <td>@Model.ApplyPlace</td>
        </tr>
        <tr>
            <th>联系人</th>
            <td>@Model.ApplyLinkman</td>
            <th>联系电话</th>
            <td>@Model.ApplyLinkPhone</td>
        </tr>
         <tr>
            <th>其他说明</th>
            <td colspan='3'>@Model.Remark</td>
        </tr>
        <tr>
            <th>培训安排</th>
            <td colspan='4'>
                <table border='0' cellpadding='0' cellspacing='0'>
                    <tr>
                        <th style='width:60px;'>日期</th>
                        <th>起止时间</th>
                        <th>培训地点</th>
                        <th style='width:150px;'>培训内容(方式)</th>
                        <th>授课教师</th>
                    </tr>
                    @if (Model != null && Model.EquipmentOpenTrainingCarryOutPlanList != null && Model.EquipmentOpenTrainingCarryOutPlanList.Count() > 0)
                    {
                        foreach (var item in Model.EquipmentOpenTrainingCarryOutPlanList)
                        {
                            @Html.Partial("../EquipmentOpenTrainingCarryOut/PlanViewInfo", item)
                        }
                    }
                </table>
            </td>
        </tr>
        @if (Model.AuditUser != null)
        {
             <tr>
                <th>审核人</th>
                <td>@Model.AuditUser.UserName</td>
                <th>审核时间</th>
                <td>@(Model.AuditTime.HasValue ? Model.AuditTime.Value.ToString("yyyy-MM-dd HH:mm") : "")</td>
            </tr>
            <tr>
                <th>审核备注</th>
                <td colspan='3'>@Model.AuditRemark</td>
            </tr>
        }
    </table>
}
else
{
    <p>没有找到相应设备培训实施计划</p>
}
</div>